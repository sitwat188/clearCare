// User model with soft delete, timestamps, and 2FA support
// email, firstName, lastName are encrypted at rest; lookup by emailHash for login/invite
model User {
  id           String  @id @default(uuid())
  emailHash    String? @unique @map("email_hash") // SHA-256 of normalized email for lookup
  email        String  @map("email") // Encrypted
  passwordHash String  @map("password_hash")
  firstName    String  @map("first_name") // Encrypted
  lastName     String  @map("last_name") // Encrypted
  role         String // 'patient' | 'provider' | 'administrator'

  // 2FA fields
  twoFactorEnabled Boolean @default(false) @map("two_factor_enabled")
  twoFactorSecret  String? @map("two_factor_secret") // Encrypted TOTP secret
  backupCodes      String? // JSON array of encrypted backup codes

  // Invitation / temporary password (admin-created users)
  mustChangePassword        Boolean   @default(false) @map("must_change_password")
  temporaryPasswordExpiresAt DateTime? @map("temporary_password_expires_at") // Max 1 year from creation

  // Soft delete
  deletedAt DateTime? @map("deleted_at")

  // Timestamps
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  lastLoginAt DateTime? @map("last_login_at")

  // Relations
  auditLogs                   AuditLog[]
  userHistory                 UserHistory[]
  historyChangedBy            UserHistory[]           @relation("UserHistoryChangedBy")
  patient                     Patient?
  instructionsAsProvider      CareInstruction[]       @relation("InstructionProvider")
  patientProviders            PatientProvider[]       @relation("PatientProviders")
  passwordResetTokens         PasswordResetToken[]
  notifications               Notification[]
  patientHistoryChangedBy     PatientHistory[]        @relation("PatientHistoryChangedBy")
  instructionHistoryChangedBy InstructionHistory[]    @relation("InstructionHistoryChangedBy")
  complianceRecordsUpdated    ComplianceRecord[]      @relation("ComplianceRecordsUpdated")
  instructionTemplates        InstructionTemplate[]

  @@index([emailHash])
  @@index([deletedAt]) // For efficient soft delete queries
  @@map("users")
}

// History table for User changes (audit trail)
model UserHistory {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  action    String // 'create', 'update', 'delete', 'login', 'logout', 'password_change', '2fa_enabled', etc.
  changedBy String?  @map("changed_by") // User ID who made the change
  oldValues Json?    @map("old_values") // Encrypted previous values
  newValues Json?    @map("new_values") // Encrypted new values
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")

  user        User  @relation(fields: [userId], references: [id])
  changedByUser User? @relation("UserHistoryChangedBy", fields: [changedBy], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
  @@index([changedBy])
  @@map("user_history")
}

// Audit Log: normalized – userEmail/userName/resourceName removed; derive via user relation (and resourceType+resourceId) when displaying
model AuditLog {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  action       String // 'read', 'write', 'delete', 'export', 'login', 'logout', etc.
  resourceType String   @map("resource_type") // 'patient', 'instruction', 'compliance', 'user', etc.
  resourceId   String?  @map("resource_id")
  ipAddress    String   @map("ip_address")
  userAgent    String   @map("user_agent")
  status       String // 'success', 'failure', 'denied'
  details      Json? // Additional encrypted context
  timestamp    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([resourceType, resourceId])
  @@index([timestamp])
  @@index([action])
  @@map("audit_logs")
}

// Patient model with encrypted PHI fields
model Patient {
  id     String @id @default(uuid())
  userId String @unique @map("user_id")

  // PHI fields (will be encrypted at application level)
  dateOfBirth                  String  @map("date_of_birth") // Encrypted
  medicalRecordNumber          String  @unique @map("medical_record_number") // Encrypted
  phone                        String? // Encrypted
  addressStreet                String? @map("address_street") // Encrypted
  addressCity                  String? @map("address_city") // Encrypted
  addressState                 String? @map("address_state") // Encrypted
  addressZipCode               String? @map("address_zip_code") // Encrypted
  emergencyContactName         String? @map("emergency_contact_name") // Encrypted
  emergencyContactRelationship String? @map("emergency_contact_relationship") // Encrypted
  emergencyContactPhone        String? @map("emergency_contact_phone") // Encrypted

  // Soft delete
  deletedAt DateTime? @map("deleted_at")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user                  User                     @relation(fields: [userId], references: [id])
  patientHistory        PatientHistory[]
  instructions          CareInstruction[]
  patientProviders      PatientProvider[]
  healthConnections     PatientHealthConnection[]
  healthObservations    PatientHealthObservation[]
  healthMedications     PatientHealthMedication[]
  healthConditions       PatientHealthCondition[]
  healthEncounters      PatientHealthEncounter[]

  @@index([userId])
  @@index([deletedAt])
  @@map("patients")
}

// Fasten Connect (and similar) external health connections per patient.
// Same org_connection_id can be linked to multiple patients (e.g. shared test account or family).
model PatientHealthConnection {
  id                     String   @id @default(uuid())
  patientId              String   @map("patient_id")
  orgConnectionId        String   @map("org_connection_id") // Fasten org_connection_id from redirect
  sourceName             String?  @map("source_name") // e.g. "Epic at Hospital X"
  connectedAt            DateTime @default(now()) @map("connected_at")
  lastSyncedAt           DateTime? @map("last_synced_at")
  lastExportTaskId       String?  @map("last_export_task_id")
  lastExportFailureReason String? @map("last_export_failure_reason")

  patient   Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  observations PatientHealthObservation[]
  medications  PatientHealthMedication[]
  conditions  PatientHealthCondition[]
  encounters  PatientHealthEncounter[]

  @@unique([patientId, orgConnectionId])
  @@index([patientId])
  @@index([orgConnectionId])
  @@map("patient_health_connections")
}

// Imported health data from Fasten EHI export (FHIR Observation)
model PatientHealthObservation {
  id            String   @id @default(uuid())
  connectionId  String   @map("connection_id")
  patientId     String   @map("patient_id")
  fhirId        String?  @map("fhir_id")
  code          String?  // e.g. LOINC code
  display       String?  // Human-readable name (e.g. "Glucose")
  category      String?  // FHIR category: laboratory, vital-signs, social-history, etc.
  value         String?  // Value + unit as display string
  unit          String?  // Unit only (for filtering/sorting)
  effectiveAt   DateTime? @map("effective_at")
  rawResource   Json?    @map("raw_resource")

  connection PatientHealthConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  patient    Patient                @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([connectionId])
  @@index([patientId])
  @@index([category])
  @@map("patient_health_observations")
}

// Imported health data from Fasten EHI export (FHIR MedicationRequest / MedicationStatement)
model PatientHealthMedication {
  id            String   @id @default(uuid())
  connectionId  String   @map("connection_id")
  patientId     String   @map("patient_id")
  fhirId        String?  @map("fhir_id")
  name          String?
  dosage        String?  // e.g. "10 mg once daily" from dosageInstruction
  status        String?
  prescribedAt  DateTime? @map("prescribed_at")
  rawResource   Json?    @map("raw_resource")

  connection PatientHealthConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  patient    Patient                @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([connectionId])
  @@index([patientId])
  @@map("patient_health_medications")
}

// Imported health data from Fasten EHI export (FHIR Condition)
model PatientHealthCondition {
  id            String   @id @default(uuid())
  connectionId  String   @map("connection_id")
  patientId     String   @map("patient_id")
  fhirId        String?  @map("fhir_id")
  code          String?
  display       String?
  clinicalStatus String? @map("clinical_status")
  onsetAt       DateTime? @map("onset_at")
  rawResource   Json?    @map("raw_resource")

  connection PatientHealthConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  patient    Patient                @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([connectionId])
  @@index([patientId])
  @@map("patient_health_conditions")
}

// Imported health data from Fasten EHI export (FHIR Encounter)
model PatientHealthEncounter {
  id            String   @id @default(uuid())
  connectionId  String   @map("connection_id")
  patientId     String   @map("patient_id")
  fhirId        String?  @map("fhir_id")
  type          String?  // encounter type (e.g. "ambulatory")
  reasonText    String?  @map("reason_text")  // reason for encounter (e.g. "Annual physical")
  serviceType   String?  @map("service_type")  // service type when present
  periodStart   DateTime? @map("period_start")
  periodEnd     DateTime? @map("period_end")
  rawResource   Json?    @map("raw_resource")

  connection PatientHealthConnection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  patient    Patient                @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([connectionId])
  @@index([patientId])
  @@map("patient_health_encounters")
}

// Junction: patient – provider (many-to-many), normalized from former assignedProviderIds array
model PatientProvider {
  patientId   String @map("patient_id")
  providerId  String @map("provider_id")
  assignedAt  DateTime @default(now()) @map("assigned_at")

  patient  Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  provider User    @relation("PatientProviders", fields: [providerId], references: [id], onDelete: Cascade)

  @@id([patientId, providerId])
  @@index([providerId])
  @@map("patient_providers")
}

// History table for Patient changes
model PatientHistory {
  id        String   @id @default(uuid())
  patientId String   @map("patient_id")
  action    String // 'create', 'update', 'delete', 'view', 'export'
  changedBy String?  @map("changed_by") // User ID who accessed/changed (null if user deleted)
  oldValues Json?    @map("old_values") // Encrypted previous PHI values
  newValues Json?    @map("new_values") // Encrypted new PHI values
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")

  patient       Patient @relation(fields: [patientId], references: [id])
  changedByUser User?   @relation("PatientHistoryChangedBy", fields: [changedBy], references: [id], onDelete: SetNull)

  @@index([patientId])
  @@index([createdAt])
  @@index([changedBy])
  @@map("patient_history")
}

// Care Instruction model (providerName/patientName removed; derive via provider/patient relations)
model CareInstruction {
  id         String @id @default(uuid())
  providerId String @map("provider_id")
  patientId  String @map("patient_id")
  title      String
  type         String // 'medication' | 'lifestyle' | 'follow-up' | 'warning'
  status       String // 'draft' | 'active' | 'acknowledged' | 'completed' | 'expired' | 'cancelled'
  priority     String // 'low' | 'medium' | 'high' | 'urgent'
  content      String // Encrypted if contains PHI

  // Medication details (JSON, encrypted if contains PHI)
  medicationDetails Json? @map("medication_details")
  lifestyleDetails  Json? @map("lifestyle_details")
  followUpDetails   Json? @map("follow_up_details")
  warningDetails    Json? @map("warning_details")

  assignedDate           DateTime  @map("assigned_date")
  acknowledgmentDeadline DateTime? @map("acknowledgment_deadline")
  acknowledgedDate       DateTime? @map("acknowledged_date")
  expirationDate         DateTime? @map("expiration_date")

  complianceTrackingEnabled Boolean @default(false) @map("compliance_tracking_enabled")
  lifestyleTrackingEnabled  Boolean @default(false) @map("lifestyle_tracking_enabled")
  version                   Int     @default(1)

  // Soft delete
  deletedAt DateTime? @map("deleted_at")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  provider           User                 @relation("InstructionProvider", fields: [providerId], references: [id])
  patient            Patient              @relation(fields: [patientId], references: [id])
  acknowledgments    Acknowledgment[]
  instructionHistory InstructionHistory[]
  complianceRecords  ComplianceRecord[]

  @@index([providerId])
  @@index([patientId])
  @@index([deletedAt])
  @@index([status])
  @@map("care_instructions")
}

// History table for Instruction changes
model InstructionHistory {
  id            String   @id @default(uuid())
  instructionId String   @map("instruction_id")
  action        String // 'create', 'update', 'delete', 'acknowledge', 'view'
  changedBy     String?  @map("changed_by") // null if user deleted
  oldValues     Json?    @map("old_values")
  newValues     Json?    @map("new_values")
  ipAddress     String?  @map("ip_address")
  userAgent     String?  @map("user_agent")
  createdAt     DateTime @default(now()) @map("created_at")

  instruction   CareInstruction @relation(fields: [instructionId], references: [id])
  changedByUser User?           @relation("InstructionHistoryChangedBy", fields: [changedBy], references: [id], onDelete: SetNull)

  @@index([instructionId])
  @@index([createdAt])
  @@index([changedBy])
  @@map("instruction_history")
}

// Acknowledgment model (patientId removed; derive via instruction.patientId)
model Acknowledgment {
  id                 String   @id @default(uuid())
  instructionId      String   @map("instruction_id")
  acknowledgmentType String   @map("acknowledgment_type") // 'receipt' | 'understanding' | 'commitment'
  ipAddress          String   @map("ip_address")
  userAgent          String   @map("user_agent")
  timestamp          DateTime @default(now())

  instruction CareInstruction @relation(fields: [instructionId], references: [id])

  @@index([instructionId])
  @@map("acknowledgments")
}

// Compliance Record model (patientId removed; derive via instruction.patientId)
model ComplianceRecord {
  id                String @id @default(uuid())
  instructionId     String @map("instruction_id")
  type              String // 'medication' | 'lifestyle' | 'appointment'
  status            String // 'compliant' | 'non-compliant' | 'partial' | 'not-started'
  overallPercentage Float  @map("overall_percentage")

  // Compliance data (JSON, encrypted if contains PHI)
  medicationAdherence   Json? @map("medication_adherence")
  lifestyleCompliance   Json? @map("lifestyle_compliance")
  appointmentCompliance Json? @map("appointment_compliance")

  lastUpdatedBy String? @map("last_updated_by") // null if user deleted

  // Timestamps
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  instruction     CareInstruction @relation(fields: [instructionId], references: [id])
  lastUpdatedByUser User?         @relation("ComplianceRecordsUpdated", fields: [lastUpdatedBy], references: [id], onDelete: SetNull)

  @@index([instructionId])
  @@index([lastUpdatedBy])
  @@map("compliance_records")
}

// Notification model
model Notification {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  type        String // 'instruction_assigned', 'acknowledgment_required', etc.
  title       String
  message     String
  priority    String // 'low' | 'medium' | 'high' | 'urgent'
  read        Boolean  @default(false)
  actionUrl   String?  @map("action_url")
  actionLabel String?  @map("action_label")
  metadata    Json? // Additional context
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@map("notifications")
}

// Password reset token (userId FK; email derived from User when sending)
model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

// Instruction template (provider-created reusable templates)
model InstructionTemplate {
  id          String   @id @default(uuid())
  providerId  String   @map("provider_id")
  name        String
  type        String // 'medication' | 'lifestyle' | 'follow-up' | 'warning'
  description String?
  content     String
  details     Json? // type-specific: medicationDetails, lifestyleDetails, etc.
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  provider User @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
  @@map("instruction_templates")
}

// Generated report (admin and provider); stored for list and re-download
model GeneratedReport {
  id             String   @id @default(uuid())
  type           String   // 'compliance' | 'users' | 'audit' | 'system' (admin); 'compliance' (provider)
  title          String
  description    String?
  generatedAt    DateTime @default(now()) @map("generated_at")
  generatedBy    String   @map("generated_by") // userId
  dateRangeStart DateTime @map("date_range_start")
  dateRangeEnd   DateTime @map("date_range_end")
  format         String   // 'pdf' | 'csv' | 'json'
  scope          String   // 'admin' | 'provider'
  providerId     String?  @map("provider_id") // set when scope = provider
  payload        Json     // full report payload for re-download

  @@index([generatedBy])
  @@index([scope, generatedBy])
  @@index([generatedAt])
  @@map("generated_reports")
}
