# Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/clearcare

# JWT (required in production)
JWT_SECRET=
JWT_REFRESH_SECRET=

# PHI / 2FA encryption (required in production for encrypted patient & 2FA data)
# Generate: openssl rand -base64 32
# After seeding, encrypt existing data: npm run db:encrypt
ENCRYPTION_KEY=

# Server
PORT=3000
NODE_ENV=development

# Frontend / CORS
# Single origin:
FRONTEND_URL=http://localhost:5173
# All system emails (invitation + password reset) are sent to this address for now. Set to your inbox.
# PASSWORD_RESET_REDIRECT_EMAIL=your@email.com

# SMTP (required to send password reset emails; if unset, link is only logged to console)
# Gmail: SMTP_HOST=smtp.gmail.com, SMTP_USER=your@gmail.com, SMTP_PASS=App Password (create at myaccount.google.com/apppasswords)
# Google Workspace (custom domain on Google): same as Gmail; use App Password for SMTP_PASS
# Outlook / Microsoft 365 (e.g. @company.com on Office 365): SMTP_HOST=smtp.office365.com, SMTP_PORT=587, SMTP_USER=your@company.com, SMTP_PASS=your normal password
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=ClearCare <noreply@example.com>

# Or multiple comma-separated origins (e.g. Vercel production + preview):
# CORS_ORIGINS=https://your-app.vercel.app,https://your-app-*.vercel.app

# Medplum FHIR (optional â€“ for using Medplum as FHIR backend)
# MEDPLUM_BASE_URL=https://api.medplum.com
# MEDPLUM_CLIENT_ID=your-client-id-from-medplum-admin-clients
# MEDPLUM_CLIENT_SECRET=your-client-secret
